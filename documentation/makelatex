#!/bin/sh

if test "$1" == "-r"
then
	echo "Deleting build folder..."
	rm build/*

	#echo "Making main.pdf..."
fi


echo "PDFLATEX=============================" > build/logo.txt
pdflatex -synctex=1 -interaction=nonstopmode --output-directory=build main.tex >> build/log.txt

echo "BIBTEX===============================" >> build/logo.txt
cd build
cp ../references.bib . 
bibtex main.aux >> build/log.txt
cd ..

echo "MAKEGLOSSARIES=======================" >> build/logo.txt
makeglossaries  -d build main  >> build/log.txt

echo "PDFLATEX=============================" >> build/logo.txt
pdflatex -synctex=1 -interaction=nonstopmode --output-directory=build main.tex >> build/log.txt

echo "PDFLATEX=============================" >> build/logo.txt
pdflatex -synctex=1 -interaction=nonstopmode --output-directory=build main.tex >> build/log.txt

echo "Build."
